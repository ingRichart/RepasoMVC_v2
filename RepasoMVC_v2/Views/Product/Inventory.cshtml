@model List<ProductModel>

@{
    ViewData["Title"] = "Inventarios";
}



<div class="text-center">
    <h1>Lista de inventarios</h1>

    <p>Aqui se va a colocar la lista de inventarios</p>

    <a class="btn btn-primary" asp-action="ProductAdd" asp-controller="Product">
        AÃ±adir Producto
    </a>
</div>

<table class="table">
    <thead>
        <th>
            Nombre
        </th>
        <th>Marca</th>
        <th>Cantidad</th>
        <th>Precio</th>
    </thead>
    <tbody>
        @foreach (ProductModel prod in Model)
        {
            <tr>
                <td> @prod.Nombre </td>
                <td> @prod.Marca </td>
                <td> @prod.Cantidad </td>
                <td> @prod.Precio </td>
            </tr>
        }

    </tbody>
    <tfoot>

    </tfoot>
</table>